###
# Define the shell prompt
###
bash_prompt_command () {
    # exit must be first
    local EXIT=$?

    # set various promt variables
    local TIME="${FG_WHITE}[\t $(date +%Z)]"
    if [[ ${EXIT} -ne 0 ]]; then
      STATUS="${FG_RED}✗"
    else
      STATUS="${FG_GREEN}✓"
    fi
    if [[ "`whoami`" = "root" ]]; then
      USERCOLOR=${FG_RED}
    else
      USERCOLOR=${FG_BLUE}
    fi
    local USER="${USERCOLOR}\u"
    local HOST="${FG_MAGENTA}\h"
    local MYPWD='$(echo -n "${PWD/#$HOME/~}" | awk -F "/" '"'"'{
      if (length($0) > 20) { if (NF>4) print $1 "/" $2 "/.../" $(NF-1) "/" $NF;
      else if (NF>3) print $1 "/" $2 "/.../" $NF;
      else print $1 "/.../" $NF; }
      else print $0;}'"'"')'

    # set git branch if in git repo
    local BRANCH=$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ {\1}/')
      if [[ ${BRANCH} == " {master}" ]]; then
        local GITCOLOR=${FG_YELLOW}
      else
        local GITCOLOR=${FG_GREEN}
      fi

    # set chef block if in chef repo
    if [[ "${PWD}" == *"/chef-repo"* ]]; then
      local CHEF=" @=$(readlink ~/.chef/knife.rb | awk -F- '{print $NF}' | cut -d. -f1)"
      local CHEFCOLOR=${FG_CYAN}
    fi

    # put it all together
    PS1=" ${STATUS}"
    PS1+=" ${TIME}"
    PS1+=" ${FG_DEFAULT}(${USER}${FG_DEFAULT}@${HOST}${FG_DEFAULT})"
    PS1+="${GITCOLOR}${BRANCH}${FG_DEFAULT}"
    PS1+="${CHEFCOLOR}${CHEF}${FG_DEFAULT}"
    PS1+=" ${MYPWD} > "
    export PS1

    # update the titlebar
    titlebar
}

